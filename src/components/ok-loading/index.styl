.ok-loader
    margin 20rpx auto
    position relative
    width 50rpx
    height 50rpx
    border-top 8rpx solid #CCC
    border-right 8rpx solid #CCC
    border-bottom 8rpx solid #CCC
    border-left 8rpx solid #006A87
    border-radius 50%
    transform translateZ(0)
    animation rotating 1.1s infinite linear

@keyframes rotating
    0%
        transform rotate(0)

    100%
        transform rotate(1turn)